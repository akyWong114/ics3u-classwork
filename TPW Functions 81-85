#exercise 82: Taxi Fare
def taxi_fare():
    distance_traveled = float(input("Please enter the distance traveled in kilometers:\n"))
    cost = (((distance_traveled * 1000) / 140) * 0.25) + 4
    print(f"The total cost is ${cost}.")

