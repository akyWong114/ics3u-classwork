#exercise 85: convert an integer to its ordinal number
def make_ordinal(n:int) -> str:
    n = int(input("Please enter the integer: "))
    string = ''
    if n == 1:
        string += 'first'
    elif n == 2:
        string += 'second'
    elif n == 3:
        string += 'third'    
    elif n == 4:
        string += 'forth'
    elif n == 5:
        string += 'fifth'
    elif n == 6:
        string += 'sixth'
    elif n == 7:
        string += 'seventh'
    elif n == 8:
        string += 'eighth'
    elif n == 9:
        string += 'ninth'
    elif n == 10:
        string += 'tenth'
    elif n == 11:
        string += 'eleventh'
    elif n == 12:
        string += 'twelvth'
    print(f"The string is {string}.")
